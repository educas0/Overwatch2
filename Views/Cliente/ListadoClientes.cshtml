@model Cliente
@{    //List<Cliente> _listaClientes =  (List<Cliente>)ViewData["listaClientes"];

}

<div class="container">
    <div class="col">
        <div class="row">
            <h1>Listado de Clientes!!!</h1>
        </div>
        <div class="row">

            <table class="table table-striped  table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Nickname</th>
                </tr>



                @if (ViewData["listaClientes"] != null)
                {

                    @foreach (Cliente _cliente in (List<Cliente>)ViewData["listaClientes"])
                    {
                        <tr>
                            <td>@_cliente.Nombre</td>
                            <td>@_cliente.Apellido</td>
                            <td>@_cliente.Nickname</td>
                        </tr>
                    }
                    <button class="btn-dark" value="InDB">Enviar a IndexedDB</button>
                }
                else
                {
                    <tr>
                        <td><p class="text-danger">Logueate para acceder...</p></td>
                    </tr>
                }
            </table>







        </div>


    </div>


</div>