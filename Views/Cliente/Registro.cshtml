@model Cliente;


<div class="row">

    <div class="col">
        <h1>Rellena los datos para crear el registro :) </h1>
        <form id="formlogin" method="post" asp-controller="Cliente" asp-action="Registro">

            <div class="form-group">
                <label for="nick"><strong>Nombre:</strong></label>
                <input id="nick" type="text" asp-for="@Model.Nombre" class="form-control" placeholder="inicia sesion con tu Nickname" />
                <span class="text-danger" asp-validation-for="@Model.Nombre"></span>
            </div>

            <div class="form-group">
                <label for="nick"><strong>Apellido:</strong></label>
                <input id="nick" type="text" asp-for="@Model.Apellido" class="form-control" placeholder="inicia sesion con tu Nickname" />
                <span class="text-danger" asp-validation-for="@Model.Apellido"></span>
            </div>

            <div class="form-group">
                <label for="nick"><strong>Nickname:</strong></label>
                <input id="nick" type="text" asp-for="@Model.Nickname" class="form-control" placeholder="inicia sesion con tu Nickname" />
                <span class="text-danger" asp-validation-for="@Model.Nickname"></span>
            </div>

            <div class="form-group">
                <label for="password"><strong>Contraseña:</strong></label>
                <input id="password" type="password" asp-for="@Model.Password" class="form-control" placeholder="introduce tu password" />
                <span class="text-danger" asp-validation-for="@Model.Password"></span>
            </div>

            <input type="submit" class="btn btn-outline-dark" value="Aceptar" />

        </form>
    </div>


</div>