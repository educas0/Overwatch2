


@model Overwatch2.Models.Cliente;
@{
    Cliente _clienteActualizar = (Cliente )ViewData["clienteSeleccionado"];
}

<div class="row">

    <div class="col">
        <h1>Actualiza Cliente</h1>
        <form id="formlogin" method="post" asp-controller="Cliente" asp-action="ActualizaCliente2">

            <div class="form-group">
                <label for="nick"><strong>Nombre:</strong></label>
                <input id="nick" type="text" asp-for="@Model.Nombre" class="form-control" value="@_clienteActualizar.Nombre" />
                <span class="text-danger" asp-validation-for="@Model.Nombre"></span>
            </div>

            <div class="form-group">
                <label for="nick"><strong>Apellido:</strong></label>
                <input id="nick" type="text" asp-for="@Model.Apellido" class="form-control" value="@_clienteActualizar.Apellido" />
                <span class="text-danger" asp-validation-for="@Model.Apellido"></span>
            </div>

            <div class="form-group">
                <label for="nick"><strong>Nickname:</strong></label>
                <input id="nick" type="text" asp-for="@Model.Nickname" class="form-control" value="@_clienteActualizar.Nickname" />
                <span class="text-danger" asp-validation-for="@Model.Nickname"></span>
            </div>

            <div class="form-group">
                <label for="password"><strong>Contraseña:</strong></label>
                <input id="password" type="password" asp-for="@Model.Password" class="form-control" value="@_clienteActualizar.Password" />
                <span class="text-danger" asp-validation-for="@Model.Password"></span>
            </div>

            <input type="submit" class="btn btn-outline-dark" value="Aceptar" />

            <div hidden>
                <input type="number" asp-for="@Model.IdCliente"/>
            </div>

        </form>
    </div>


</div>